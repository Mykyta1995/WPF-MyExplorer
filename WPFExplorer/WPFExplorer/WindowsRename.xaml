<Window x:Class="WPFExplorer.WindowsRename"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WindowsRename" Height="130" Width="150" MaxHeight="130" MaxWidth="150" MinHeight="130" MinWidth="150">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="3" HorizontalAlignment="Center" Width="80" Height="25" Content="OK" FontSize="15" Click="Button_Click" Name="btnOk"></Button>
        <TextBox Grid.Row="1" Height="20" Name="BoxName" TextChanged="BoxName_TextChanged" Margin="5"/>
        <Label Content="New name?" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" />
    </Grid>
</Window>
